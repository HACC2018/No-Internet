<div id="postFeedContainer">
  <div class="topBar">
    <div class="topBarGrid">
      <div class="userIcon">
        <div class="userIconCircle">
          <i class="fas fa-user-graduate"></i>
        </div>
        <i class="backArrow" class="fas fa-arrow-left"></i>
      </div>
      <div class="postFeedTitle">
        <h1>Posting</h1>
      </div>
      <div class="closeButton">
        <i class="fas fa-times"></i>
      </div>
    </div>
  </div>
  <div class="forumScroll">
    <div class="formContainer">
      <form class="formGrid">
        <div class="formItemType formGridItem">
          <label for="radioContainer">Type of Post</label>
          <div id="radioGridContainer">
            <label id="formRequest" class="radioContainer">
              <h1>Requesting</h1>
              <input type="radio" name="radio" value="request">
              <!-- <span class="checkmark"></span> -->
            </label>
            <label id="formProvide" class="radioContainer">
              <h1>Providing</h1>
              <input type="radio" name="radio" value="request">
              <!-- <span class="checkmark"></span> -->
            </label>
          </div>
        </div>

        <div class="formItemTitle formGridItem">
          <label for="formTitleInput">What you're requesting/providing</label>
          <select id="formTitleInput">
            <option value="">op1</option>
            <option value="">op2</option>
            <option value="">op3</option>
            <option value="">op4</option>
          </select>
        </div>

        <div class="formItemDescription formGridItem">
          <label for="formDescriptionInput">Description</label>
          <textarea id="formDescriptionInput"></textarea>
        </div>

        <div class="formItemImage">
          <label for="formItemImageContainer">Upload an Image</label>
          <div class="formItemImageContainer">
            <i class="fas fa-file-image"></i>
          </div>
        </div>
        <input type="submit" value="Submit">
      </form>
    </div>
  </div>
</div>
