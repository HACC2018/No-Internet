<div class="container">
  <div class="row pt-5">
    <div class="col-12 pt-5 text-center" id="appName">AppName</div>
  </div>

  <div class="row pt-4 justify-content-center">
    <div class="col-10">
      <input class="input" id="userInp" type="text" name="username" placeholder="Username">
    </div>

    <div class="col-10 pt-3">
      <input class="input" id="passInp" type="password" name="password" placeholder="Password">
    </div>

    <div class="col-10 pt-3">
      <button class="input logIn" id="submit">Log In</button>
    </div>

    <div class="col-10 pt-3">
      <button class="reset">Forgot Password?</button>
    </div>
  </div>

  <div class="row fixed-bottom">
    <a href="/register" class="signUpPg pb-3 text-center">Don't have an account? <span style="color:rgb(178, 133, 245)">Sign up</span></a>
  </div>
</div>